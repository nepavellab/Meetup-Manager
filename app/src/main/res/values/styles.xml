<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="guest_card_style" parent="">
        <item name="android:background">@drawable/guest_card_style</item>
    </style>

    <style name="meet_card_style" parent="">
        <item name="android:background">@drawable/meet_card_style</item>
    </style>

    <style name="group_card_style" parent="">
        <item name="android:background">@drawable/group_card_style</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="invalid_toast">
        <item name="stTextBold">true</item>
        <item name="stColorBackground">@color/error</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">15sp</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stIconStart">@drawable/invalid_icon</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">30dp</item>
    </style>

    <style name="valid_toast">
        <item name="stTextBold">true</item>
        <item name="stColorBackground">@color/valid</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">15sp</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stIconStart">@drawable/valid_icon</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">30dp</item>
    </style>
</resources>