<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5sp"
    style="@style/cardStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/guest_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guest_icon"
        android:layout_marginTop="60sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/guest_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/text_view_background"
        app:layout_constraintLeft_toRightOf="@+id/guest_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guest_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/text_view_background"
        app:layout_constraintLeft_toRightOf="@+id/guest_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guest_name" />

    <TextView
        android:id="@+id/guest_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/text_view_background"
        app:layout_constraintLeft_toRightOf="@+id/guest_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guest_email" />

    <Button
        android:id="@+id/generate_qr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Сгенерировать QR"
        android:textSize="30sp"
        android:onClick="addGuest"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="20sp"
        android:layout_marginRight="70sp"
        app:layout_constraintTop_toBottomOf="@id/guest_phone_number"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/delete_guest_button"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginTop="20sp"
        android:layout_weight="2"
        android:background="@color/white"
        android:src="@drawable/delete_icon"
        app:layout_constraintLeft_toRightOf="@id/generate_qr"
        app:layout_constraintTop_toBottomOf="@id/guest_phone_number" />

    <ImageView
        android:id="@+id/QR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/generate_qr"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>