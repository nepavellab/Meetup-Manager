<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewGuest">

    <EditText
        android:id="@+id/guest_id_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="ID гостя"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="26sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/guest_name_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Имя гостя"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="26sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guest_id_input"/>

    <EditText
        android:id="@+id/guest_email_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Адрес электронной почты"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="26sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guest_name_input"/>

    <EditText
        android:id="@+id/guest_phone_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Номер телефона"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="26sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guest_email_input"/>

    <Button
        android:id="@+id/add_click"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:text="Добавить гостя"
        android:background="@android:drawable/btn_default"
        android:textSize="26sp"
        android:onClick="addGuestClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>